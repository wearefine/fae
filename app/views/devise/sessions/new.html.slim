.login-form
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login_form' }) do |f|
    = f.input :email, required: false, autofocus: true
    = f.input :password, required: false
    - if @option.site_mfa_enabled
      = fae_input f, :otp_attempt, label: 'MFA Code', helper_text: 'Contact an admin if you donâ€™t have access to your multi-factor authentication code.'
    .login-form-actions
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
      = f.button :submit, "Submit", class: "login-form-actions-submit"
