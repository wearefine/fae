<%= render 'fae/shared/index_header', title: @klass_humanized.pluralize.titleize %>

<div class="main_content-sections">
  <section class="main_content-section">
    <div class="main_content-section-area">
      <div class="collapsible-toggle">Open All</div>

      <div class="collapsible">
        <%= content_tag(:h3, "#{@klass_humanized.pluralize} (#{@items.length})") %>
        <table class="main_content-sortable">
          <thead>
            <tr>
              <th class="th-arrange-handle"></th>
              <th>Name</th>
              <th>Modified</th>
              <th class="-live" data-sorter="false">On Stage</th>
              <th class="-live" data-sorter="false">On Prod</th>
              <th class="-delete" data-sorter="false">Delete</th>
            </tr>
          </thead>

          <tbody>
            <% @items.each do |item| %>
              <tr id="<%= "#{@klass_singular}_#{item.id}" %>">
                <td class="arrange-handle">
                  <span class="icon-sort"></span>
                </td>
                <td><%= link_to item.fae_display_field, edit_admin_selling_point_path(item) %></td>
                <td><%= fae_date_format item.updated_at %></td>
                <td><%= fae_toggle item, :on_stage %></td>
                <td><%= fae_toggle item, :on_prod %></td>
                <td class="-delete"><%= fae_delete_button item %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>