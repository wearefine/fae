<%= render 'fae/shared/index_header', title: "#{@klass_humanized.pluralize}" %>


<div class="main_content-sections">
  <section class="main_content-section">
    <div class="content">
      <table class="main_content-sortable">
        <thead>
          <tr>
            <th class="th-sortable-handle"></th>
            <th>Name</th>
            <th class="-thumb">Image</th>
            <th class="-modified">Modified</th>
            <th class="-live" data-sorter="false">On Stage</th>
            <th class="-live" data-sorter="false">On Prod</th>
            <th class="-delete" data-sorter="false">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr id="<%= "#{@klass_singular}_#{item.id}" %>">
              <td class="sortable-handle">
                <span class="icon-sort"></span>
              </td>
              <td><%= link_to item.name, edit_admin_person_path(item.id) %></td>
              <td><%= image_tag item.image.asset.thumb.url if item.image.present? %></td>
              <td class="-modified"><%= fae_date_format item.updated_at %></td>
              <td><%= fae_toggle item, :on_stage %></td>
              <td><%= fae_toggle item, :on_prod %></td>
              <td class="-delete">
                <%= link_to ['admin', item], method: :delete, data: { confirm: t('fae.delete_confirmation') }, class: 'main_table-action' do %>
                  <span class="icon-delete_x"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>